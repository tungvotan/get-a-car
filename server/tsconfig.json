{
  "compilerOptions": {
    "module": "commonjs", // Ensure we're using CommonJS modules for Node.js
    "esModuleInterop": true, // For importing CommonJS modules like express
    "target": "es6", // Compatible target for Node.js environment
    "outDir": "./dist", // The output directory for compiled files
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "types": ["node", "jest"] // Add Jest types here
  },
  "include": ["src/**/*", "tests/**/*"], // Include source and test files
  "exclude": ["node_modules"]
}
